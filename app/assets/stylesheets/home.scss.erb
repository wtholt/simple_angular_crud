html, body {
  margin: 0;
  padding: 0;
  border: 0;
  height: 100%;
}

body {
  font-family: 'Lato', sans-serif;
}

h1 {
  font-family: 'Roboto Condensed', sans-serif;
}

.col-md-6 {
  min-height: 100%;
}

#left {
  background-color: #22a301;
  color: #fff;
}

#right {
  color: #22a301;
}

.jumbotron-contact {
  background-image: url('<%= asset_path("contacts.jpg") %> ');
  background-image: no-repeat;
  background-size: cover;
  background-position: 100% 55%;
  padding: 125px 15px;
  margin-bottom: 30px;
  color: inherit;
  background-color: #eee;
  border-radius: 10px;
}

.glyphicon.glyphicon-trash {
  color: #d9534f;
}

.list-group-item.active > .badge,
.nav-pills > .active > a > .badge {
  color: #337ab7;
  background-color: #22a301;
}

.list-group-item {
  background-color: #22a301;
  border-left: none;
  border-right: none;
}